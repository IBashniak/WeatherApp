<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="repository"
            type="com.ibashniak.weatherapp.data.Repository"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <ImageView
                android:id="@+id/windRose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/compass_rose16"
                tools:visibility="visible"
                android:contentDescription="@+id/windRose" />

            <ImageView
                android:id="@+id/iv_windDirection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:rotation="90"
                app:srcCompat="@drawable/baseline_navigation_24"
                android:contentDescription="@+id/iv_windDirection" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleX="0.3"
                android:scaleY="0.3"
                android:visibility="@{repository.progressBarVisibility}" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_description"
            android:text="@{repository.currentWeather.description}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/averia_libre_bold"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            tools:layout_editor_absoluteX="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="100sp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/wind"
                    android:contentDescription="@+id/imageView" />

                <TextView
                    android:id="@+id/tv_wind"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:text="@{repository.currentWeather.windSpeed}"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="9\nm/sec"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/et_temperature"
                android:text="@{repository.currentWeather.temperature}"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/iv_weatherConditionIcon_primary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/iv_weatherConditionIcon_primary"
                android:visibility="visible"
                app:srcCompat="@android:drawable/ic_menu_compass"
                app:weatherIcon="@{repository.currentWeather.icon}"
                tools:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/tv_windScale"
                android:text="@{repository.currentWeather.windScale}"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_Humidity"
                android:text="@{repository.currentWeather.humidity}"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_tempRange"
                android:text="@{repository.currentWeather.tempRange}"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>